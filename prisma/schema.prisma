datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  role      Role     @default(USER)
  status    Status   @default(ACTIVE)
  randToken String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Provider {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  logoSrc String
  logoAlt String
  series  Series[] @relation("ProviderToSeries")
}

model Series {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  category   String
  coverImage String
  provider   Provider @relation(fields: [providerId], references: [id], name: "ProviderToSeries")
  providerId String   @db.ObjectId
  courses    Course[] @relation("SeriesToCourse")
}

model Course {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  duration   String
  coverImage String
  series     Series @relation(fields: [seriesId], references: [id], name: "SeriesToCourse")
  seriesId   String @db.ObjectId
}

enum Role {
  USER
  ADMIN
  AUTHOR
}

enum Status {
  ACTIVE
  INACTIVE
  FREEZE
}
